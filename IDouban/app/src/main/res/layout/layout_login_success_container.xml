<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_layout_login_success_container"
    android:visibility="gone"
    tools:context="com.shrimpcolo.johnnytam.ishuying.login.LoginFragment">

    <ImageView
        android:id="@+id/img_login_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_ishuying"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <TextView
        android:id="@+id/txt_login_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_login_photo"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/view_login_profile_name"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="240dp"
        android:layout_height="42dp"
        android:background="@drawable/bg_btn_login_logout"
        android:text="@string/btn_logout_text"
        android:textColor="@color/color_white"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

</RelativeLayout>
